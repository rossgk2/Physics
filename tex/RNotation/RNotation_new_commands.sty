\let\II\undefined
\let\SS\undefined

\newcommand{\defbold}[1]
{
    \expandafter\providecommand\csname #1#1\endcsname{{\mathbf{#1}}}
}

\newcounter{ct}

%lowercase letters
\forLoop{1}{26}{ct}
{
    \edef\letter{\alph{ct}}
    \expandafter\defbold\letter
}

%capital letters

\forLoop{1}{26}{ct}
{
    \edef\letter{\Alph{ct}}
    \expandafter\defbold\letter
}

