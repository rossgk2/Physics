%Definitions
\newtheoremstyle{defn_}{}{}{}{}{\bfseries}{.}{.5em}{}
\theoremstyle{defn_}
\newtheorem{defn_inner}{Definition}

\newenvironment{defn}
  {\begin{mdframed}[
    backgroundcolor=defnbackground,
    roundcorner=5pt,
    linewidth=0pt,
    innertopmargin=8pt,
    innerbottommargin=8pt,
    innerleftmargin=8pt,
    innerrightmargin=8pt
  ]\begin{defn_inner}}
  {\end{defn_inner}\end{mdframed}}

